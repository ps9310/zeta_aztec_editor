<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Popup Menu Style for Light/DayNight themes -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Action Mode Style for Light/DayNight themes -->
    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/blue_medium</item>
        <item name="android:titleTextStyle">@style/ActionModeTitleText</item>
    </style>

    <style name="ActionModeTitleText" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Popup Menu Style for Dark theme -->
    <style name="PopupMenuStyle.Dark" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/almost_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Action Mode Style for Dark theme -->
    <style name="ActionModeStyle.Dark" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/blue_medium</item>
        <item name="android:titleTextStyle">@style/ActionModeTitleText.Dark</item>
    </style>

    <style name="ActionModeTitleText.Dark" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Editor DayNight Theme -->
    <style name="EditorDayNightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorAccent">@color/blue_medium</item>
        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryDark">@color/blue_wordpress</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Additional adjustments for icons, text, and menus -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:actionModeStyle">@style/ActionModeStyle</item>
        <!-- Ensure toolbar icons are tinted correctly -->
        <item name="colorControlNormal">@color/black</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_material</item>
    </style>

    <!-- Editor Light Theme -->
    <style name="EditorLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorAccent">@color/blue_medium</item>
        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryDark">@color/blue_wordpress</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Additional adjustments for icons, text, and menus -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:actionModeStyle">@style/ActionModeStyle</item>
        <!-- Ensure toolbar icons are tinted correctly -->
        <item name="colorControlNormal">@color/black</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_material</item>
    </style>

    <!-- Editor Dark Theme -->
    <style name="EditorDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorAccent">@color/blue_medium</item>
        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryDark">@color/blue_wordpress</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Additional adjustments for icons, text, and menus -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle.Dark</item>
        <item name="android:actionModeStyle">@style/ActionModeStyle.Dark</item>
        <!-- Ensure toolbar icons are tinted correctly -->
        <item name="colorControlNormal">@color/white</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_material</item>
    </style>

</resources>