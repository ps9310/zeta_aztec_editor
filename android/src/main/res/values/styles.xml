<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/blue_medium</item>
        <item name="android:colorPrimary">@color/blue_medium</item>
        <item name="android:colorPrimaryDark">@color/blue_medium</item>
        <item name="android:textColorHighlight">@color/blue_light</item>
        <item name="colorAccent">@color/blue_medium</item>
        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryDark">@color/blue_wordpress</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>